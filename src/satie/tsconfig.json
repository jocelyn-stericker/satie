{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es5"
    },
    "files": [
        "./src/index.ts",
        "./src/tests.ts",
        "./src/cli.ts",
        "./vendor/typings/tsd.d.ts"
    ],
    "rules": {
        "ban": [true, ["_", "isNull"], ["_", "isDefined"] ],
        "class-name": true,
        "comment-format": [true, "check-space" ],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": [4, "spaces"],
        "interface-name": true,
        "jsdoc-format": false,
        "label-position": true,
        "label-undefined": true,
        "max-line-length": [true, 101],
        "no-any": false,
        "no-arg": true,
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-constructor-vars": true,
        "no-debugger": true,
        "no-duplicate-key": true,
        "no-duplicate-variable": false,
        "no-empty": true,
        "no-eval": true,
        "no-string-literal": false,
        "no-switch-case-fall-through": true,
        "no-trailing-comma": false,
        "no-trailing-whitespace": true,
        "no-unreachable": true,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "no-use-before-declare": false,
        "no-var-keyword": true,
        "no-var-requires": true,
        "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace" ],
        "quotemark": [true, "double"],
        "radix": true,
        "semicolon": true,
        "sort-object-literal-keys": false,
        "triple-equals": [true, "allow-null-check"],
        "typedef": [true, "index-signature", "property-signature", "member-variable-declarator" ],
        "typedef-whitespace": [true, ["callSignature", "noSpace"], ["catchClause", "noSpace"], ["indexSignature", "space"] ],
        "use-strict": false,
        "variable-name": false,
        "whitespace": [false, "check-branch", "check-decl", "check-operator", "check-separator", "check-type", "check-typecast" ]
    }
}
